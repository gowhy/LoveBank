        <div class="x_ind_2">
            <div class="bank1 fl">
                <img class="fl" src="@Url.Content("~/Content/Web/img/volunteer.png")" alt=""><ul>
                @foreach (var item in @Model.WebLoveShowList)
                {
                     <li><a href="###" class="dis-ib">@item.Title</a><span class="fr">@item.AddTime.ToString("yyyy-MM-dd")</span></li>
                }
                   
               
                </ul>
            </div>
            <div class="bank1 fl">
                <img class="fl" src="@Url.Content("~/Content/Web/img/vrank.png")" alt="">
