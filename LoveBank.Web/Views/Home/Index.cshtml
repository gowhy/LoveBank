                }
                </ul>
            </div>

            <div class="bank1 fl">
                <img class="fl" src="@Url.Content("~/Content/Web/img/balance.png")" alt="">
                <ul>
                    @foreach (var item in @Model.LoveFundList)
                    {
                        <li><a href="###" class="dis-ib">@item.Title</a><span class="fr">@item.AddTime.ToString("yyyy-MM-dd")</span></li>
                    }
               
                
                </ul>
            </div>

            <div class="bank1 fl">
                <img class="fl" src="@Url.Content("~/Content/Web/img/vteam.png")" alt="">
