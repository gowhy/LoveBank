@using LoveBank.MVC
@model LoveBank.Web.Admin.Models.ProductModel
@Html.IncludeCSS("~/Content/plug-in/webuploader/webuploader.css")
@Html.IncludeScript("~/Content/plug-in/webuploader/webuploader.js")
@Html.IncludeCSS("~/Content/Css/demo.css")
@Html.IncludeCSS("~/Content/plug-in/webuploader/demo.css")

<div id="p" class="easyui-panel" title="编辑商品" data-options="tools:'#tt'">
    @using (Html.BeginForm("PostEdit", "Product", FormMethod.Post, new { name = "AddForm", id = "AddForm" }))
    {
        <table class="form">


            <tr>
                <td class="item_title">
                    产品名称:
                </td>
                <td class="item_input">
                    <input class="easyui-validatebox" type="text" style="height:25px; width:260px;   " id="Name" name="Name"
                        value="@Model.Name"   data-options="required:true,validType:'length[2,20]'" /> (必须填)

                </td>
            </tr>
            <tr>
                <td class="item_title">
                    产品裂隙:
                </td>
                <td class="item_input">
                    @Html.EnumToSelectList(new LoveBank.Core.Domain.Enums.ProductType(), ((int)Model.Type).ToString(), "Type", null, new { })
                </td>
            </tr>
            <tr>
                <td class="item_title">
                    条形码:
                </td>
                <td class="item_input">
                    <input class="easyui-validatebox" type="text" style="height:25px; width:260px;   " id="BarCode" name="BarCode"
                           value="@Model.BarCode" data-options="validType:'length[8,20]'" /> (必须填)

                </td>
            </tr>
            <tr>
                <td class="item_title">
                    价格:
                </td>
                <td class="item_input">
                    <input class="easyui-numberbox" type="text" style="height:25px; width:260px;   " name="Price" id="Price"
                           value="@Model.Price" data-options="required:true,validType:'length[1,9]'" /> (必填)

                </td>
            </tr>
            <tr>
                <td class="item_title">
                    库存:
                </td>
                <td class="item_input">
                    <input class="easyui-numberbox" type="text" style="height:25px; width:260px;   " name="Count" id="Count"
                           value="@Model.Count" data-options="required:true,validType:'length[1,9]'" /> (必填)

                </td>
            </tr>
            <tr>
                <td class="item_title">
                    消耗积分:
                </td>
                <td class="item_input">
                    <input class="easyui-numberbox" type="text" style="height:25px; width:260px;   " name="CostScore" id="CostScore"
                           value="@Model.CostScore" data-options="required:true,validType:'length[1,9]'" /> (必填)

                </td>
            </tr>
            <tr>
                <td class="item_title">
                    有效期:
                </td>
                <td class="item_input">
                    <input class="easyui-validatebox" type="text" style="height:25px; width:260px;   " id="StartTime" name="StartTime"
                           value="@Model.StartTime.ToString("yyyy-MM-dd")" onclick="WdatePicker()" data-options="required:true" /> ~
                    <input class="easyui-validatebox" type="text" style="height:25px; width:260px;   " id="EndTime" name="EndTime"
                           value="@Model.EndTime.ToString("yyyy-MM-dd")" onclick="WdatePicker()" data-options="required:true" />
                </td>
            </tr>

            <tr>
                <td class="item_title">
                    产品图片:
                </td>
                <td class="item_input">
                    <div id="uploader" class="wu-example uploader" style="width:700px;margin-left:0px;">
                        <div class="queueList" style=" margin:0px; ">
                            <div id="dndArea" class="placeholder">
                                <div id="filePicker"></div>
                                <p>或将文件拖到这里,多可选5个图片</p>
                            </div>
                        </div>
                        <div class="statusBar" style="display:none;">
                            <div class="progress">
                                <span class="text">0%</span>
                                <span class="percentage"></span>
                            </div><div class="info"></div>
                            <div class="btns">
                                <div id="filePicker2" class="filePicker2"></div><div class="uploadBtn">开始上传</div>
                            </div>
                        </div>
                    </div>

                </td>
            </tr>
            <tr>
                <td class="item_title">
                    赞助商家:
                </td>
                <td class="item_input">
                    <input class="easyui-validatebox" type="text" style="height:25px; width:260px;   " id="Sponsors" name="Sponsors"
                        value="@Model.Sponsors"   data-options="validType:'length[1,30]'" />

                </td>
            </tr>
            <tr>
                <td class="item_title">
                    商家Logo:
                </td>
                <td class="item_input">
                    <div id="uploader2" class="wu-example uploader" style="width:700px;margin-left:0px;">
                        <div class="queueList" style=" margin:0px; ">
                            <div id="dndArea" class="placeholder">
                                <div class="filePickerLogo" id="filePickerLogo"></div>
                                <p>或将文件拖到这里,多可选5个图片</p>
                            </div>
                        </div>
                        <div class="statusBar" style="display:none;">
                            <div class="progress">
                                <span class="text">0%</span>
                                <span class="percentage"></span>
                            </div><div class="info"></div>
                            <div class="btns">
                                <div class="filePicker3 filePicker2" id="filePicker3"></div><div class="uploadBtn">开始上传</div>
                            </div>
                        </div>
                    </div>

                </td>
            </tr>
            <tr>
                <td class="item_title">
                    商家宣传图片:
                </td>
                <td class="item_input">
                    <div id="uploader3" class="wu-example uploader" style="width:700px;margin-left:0px;">
                        <div class="queueList" style=" margin:0px; ">
                            <div id="dndArea" class="placeholder">
                                <div class="filePickerLogo" id="filePickerProductor"></div>
                                <p>或将文件拖到这里,多可选5个图片</p>
                            </div>
                        </div>
                        <div class="statusBar" style="display:none;">
                            <div class="progress">
                                <span class="text">0%</span>
                                <span class="percentage"></span>
                            </div><div class="info"></div>
                            <div class="btns">
                                <div class="filePicker3 filePicker2" id="filePicker4"></div><div class="uploadBtn">开始上传</div>
                            </div>
                        </div>
                    </div>

                </td>
            </tr>
            <tr>
                <td class="item_title">
                    产品描述:
                </td>
                <td class="item_input">
                    <input class="easyui-validatebox" type="text" style="height:25px; width:460px;   "
                           value="@Model.Desc"     id="Desc" name="Desc" />

                </td>
            </tr>
            <tr>
                <td class="item_title"></td>
                <td class="item_input2">
                    <!--隐藏元素-->
                    <div style="padding:5px">
                        <input type="hidden" name="Id" id="Id" value="@Model.Id"/>
                        <a href="javascript:void(0)" class="easyui-linkbutton" id="addFromSubmit"> &nbsp  &nbsp &nbsp &nbsp &nbsp 保存 &nbsp  &nbsp &nbsp &nbsp &nbsp </a>

                    </div>

                </td>
            </tr>

        </table>
    }


</div>
<div id="tt">

    <a href="@Url.Action("Index", "Product")" class="icon-back" title="返回列表"></a>
</div>

